# ===========================================
# BunaSIEM Environment Configuration
# ===========================================
# Copy this file to .env and update with your values
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bunasiem
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bunasiem
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Backend Server Configuration
BACKEND_PORT=3001
NODE_ENV=development
JWT_SECRET=your_super_secure_jwt_secret_here
JWT_EXPIRES_IN=7d

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001
VITE_APP_NAME=BunaSIEM

# ML Service Configuration
ML_SERVICE_PORT=5000
MODEL_PATH=./models/anomaly_model.pkl
TRAINING_DATA_PATH=./models/sample_logs.json

# AWS Integration (Optional - for cloud log ingestion)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Email Service (for alerts)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# SMS Service (l - for Ethiopian providers)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=BunaSIEM

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Demo Mode (for testing)
DEMO_MODE=true
SAMPLE_DATA_PATH=./sample-logs/